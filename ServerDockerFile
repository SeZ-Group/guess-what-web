# Use official Python image
FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

# Set work directory
WORKDIR /app

# Install dependencies
COPY server/guesswhat/requirements.txt ./requirements.txt
RUN pip install --upgrade pip && pip install -r requirements.txt

# Copy project
COPY server/guesswhat/ .

# Expose port
EXPOSE 8000

# Collect static files (optional, if you use static files)
# RUN python guesswhat/manage.py collectstatic --noinput

# Start server with gunicorn
CMD ["gunicorn", "guesswhat.wsgi:application", "--bind", "0.0.0.0:8000"] 